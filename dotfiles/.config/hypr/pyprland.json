{
    "pyprland": {
      "plugins": ["scratchpads"]
    },
    "scratchpads": {
      "term": {
        "command": "kitty --class scratchpad",
        "margin": 50
      },
      "pavucontrol": {
        "command": "pavucontrol",
        "margin": 50,
        "unfocus": "hide",
        "animation": "fromTop",
        "lazy": true
      },
      "bluetooth": {
        "command": "blueman-manager",
        "margin": 50,
        "unfocus": "hide",
        "animation": "fromTop",
        "lazy": true
      },
      "btop": {
        "command": "kitty -e btop",
        "margin": 50,
        "unfocus": "hide",
        "animation": "fromTop"
      }

    }
  }
